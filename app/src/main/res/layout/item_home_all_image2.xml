<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/base10dp"
        android:paddingTop="@dimen/base10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xxx.handnote.view.M_TextView
            android:id="@+id/itemTime"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/base12dp"
            android:textColor="@color/colorBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.xxx.handnote.view.M_TextView
            android:layout_marginRight="@dimen/base10dp"
            android:id="@+id/itemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base10dp"
            android:lineSpacingMultiplier="1.3"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/base16dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="@dimen/base10dp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/base10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base170dp">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_1"
                android:layout_width="@dimen/base0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/frescoImageStyle"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginLeft="@dimen/base10dp"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_2"
                android:layout_width="@dimen/base0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/frescoImageStyle"
                />

        </LinearLayout>


        <View
            android:layout_marginTop="@dimen/base10dp"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </LinearLayout>


</FrameLayout>